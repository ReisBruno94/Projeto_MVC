@model Projeto.Entity.Conta

@{
    Layout = null;
    ViewBag.Title = "Deseja Realmente deletar essa Conta?";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">Detalhes do Cliente</h4>
</div>
<div class="modal-body">
    <p>@Html.DisplayNameFor(model => model.Cliente.Nome) : @Html.DisplayFor(model => model.Cliente.Nome)</p>
    <p>@Html.DisplayNameFor(model => model.Saldo) : @Html.DisplayFor(model => model.Saldo)</p>
</div>

@using (Html.BeginForm())
{
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Sim</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Não</button>
    </div>
}
