@model Projeto.Entity.Conta

@{
    /**/

    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>
@using (Html.BeginForm("Cadastrar", "Conta", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <fieldset>
            <div class="form-group">
                @Html.LabelFor(model => model.ClienteID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.DropDownListFor(m => m.ClienteID, new SelectList(ViewBag.Cliente, "ClienteID", "Nome"),
                    "Selecione o Cliente: ", new {@class="form-control"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BancoID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.DropDownListFor(m => m.BancoID, new SelectList(ViewBag.Banco, "BancoID", "NomeBanco"),
                    "Selecione o Cliente: ", new {@class="form-control"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Saldo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Saldo, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>

        </fieldset>

        <div class="form-actions col-md-offset-2">
            <input class="btn btn-success" type="submit" name="btnsalvar" value="Salvar" />
            <a class="btn btn-primary" href="~/Cliente/Index">Voltar</a>
        </div>
    </div>



}

<div class="text-primary text-success text-center">
    @ViewBag.MensagemExito
</div>
<div class="text-primary text-danger text-center">
    @ViewBag.MensagemErro
</div>